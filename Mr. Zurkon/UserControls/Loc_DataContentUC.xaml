<UserControl x:Class="Mr.Zurkon.UserControls.Loc_DataContentUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mr.Zurkon.UserControls"
             mc:Ignorable="d" 
             Height="Auto"
             Width="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Separator Grid.Row="0" Margin="0, 10, 0, 0"/>
        <TabControl x:Name="tabcontrol_Localisations" Grid.Row="1" TabStripPlacement="Left"/>
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,5,5,5">
            <Button x:Name="btn_Save" Content="Save" Margin="5,0,5,0" Click="btn_Save_Click"/>
            <Button x:Name="btn_ExportCSV" Content="Export as CSV" Margin="5,0,5,0" Click="btn_ExportCSV_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
